{
  "name": "fb-poster-ts",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && cpx 'src/*.html' dist/ && cpx 'src/public/**/*' dist/public/",
    "watch": "tsc -w",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --compiler-options '{\"module\":\"CommonJS\"}' --watch src src/server.ts"
  },
  "dependencies": {
    "dotenv": "^16.1.4",
    "fs-extra": "^11.1.1",
    "@google/generative-ai": "^0.24.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.0",
    "cpx": "^1.5.0"
  }
}
